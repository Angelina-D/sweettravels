<h1>Here are all the sweets to browse through</h1>

<div class="flex-container-landing">
  <% @sweets.each do |sweet| %>
  <div class="card-sweet">
    <div class="card-img">
      <%= link_to cl_image_tag(sweet.picture, crop: :fill), new_request_path %>
    </div>
    <p>Category: <%= sweet.category %></p>
    <p>Country: <%= sweet.country %></p>

  </div>
  <% end %>
</div>
