<div class="container-top">
  <h1>Here are all the sweets to browse through</h1>
</div>
<div class="container-sweet">
  <% @sweets.each do |sweet| %>
  <div class="card-sweet">
    <div class="card-img">
      <%= link_to cl_image_tag(sweet.picture, crop: :fill), new_sweet_request_path(sweet.id) %>
    </div>
      <div class="card-info">
        <h4>Country: <%= sweet.country %></h4>
        <p>Category: <%= sweet.category %></p>
      </div>
  </div>
  <% end %>
</div>
