<%= link_to "back to candies", sweets_path , class: 'btn-info' %>
<div class="request-form-container">
    <div class="text-center">
      <h1>Request for <%= @request.sweet.name %> </h1>
    </div>
  <%= simple_form_for(@request) do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.error_notification %>
        <%= f.input :description, label: 'Write a Message to your hero:' %>
      </div>
      <div class="form-group col-md-4">
        <%= cl_image_tag(@request.sweet.picture, {id: 'sweet-image-container'}) %>
      </div>
    </div>
    <div class="form-row mt-64">
      <div class="form-group col-md-3">
        <%= f.input :price_cents, label: 'Candy price:'%>
      </div>
      <div class="form-group col-md-3">
        <%= f.input :quantity, label: 'Number of pack:'%>
      </div>
    </div>
    <div class="form-row mt-20">
      <div class="form-group col-md-6">
          <%= f.input :donation_cents, label: 'Donation amount:'  %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%#= f.association :charity, as: :radio_buttons %>
          <div class="form-group">

            <% Charity.all.each do |charity| %>

                <input class="no-display" type="radio" value="<%= charity.id %>" name="request[charity_id]" id="request_charity_id_<%= charity.id %>">

                <label class="form-charity-label radio_buttons required" for="request_charity_id_<%= charity.id %>"> <%= cl_image_tag(charity.picture)%> </label>

            <% end %>

          </div>
      </div>

      <input  type="hidden"  value="<%= @request.sweet_id %>" name="request[sweet_id]" id="request_sweet_id">

      <div class="form-goup col-md-4">
        <div class=“form-actions”>
        <%= f.button :submit, class: 'btn-action' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
