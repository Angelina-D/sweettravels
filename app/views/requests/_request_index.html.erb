<% @requests.each do |request| %>
  <%= link_to request_path(request.id), :action => 'go', class: "card card-request" do %>
    <%= cl_image_tag(request.sweet.picture,
    {class:"card-picture rc-16"}) %>

    <div class="card-request-info">
      <div class="card-donation">
        <p>  <i class="fas fa-globe-americas"></i> <%= request.sweet.country %></p>
        <div class="card-charity">
          <p> <i class="fas fa-heart"></i> <%= request.charity.name %></p>
        </div>
      </div>
      <div class="card-price">
        <div class="card-avatar">
          <%= cl_image_tag(request.user.photo,
           {class: "avatar"}) %>
           <p>  <%= request.user.full_name %></p>
        </div>
           <p> <%= request.user.city %></p>
         <div class="card-total-column">
            <p>donation: <%= convert_currency(request.donation_cents) %> €</p>
          <div class="card-border-bottom">
            <p>price:  <%= convert_currency(request.price_cents) %> €</p>
          </div>
            <p class='mt-2'>total:  <%= convert_currency(request.price_cents + request.donation_cents) %> €</p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


