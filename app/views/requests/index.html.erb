<div class="container-top">
  <h1>Here is all the sweets Request!</h1>
  <p>You can bowse through to see all the sweet request for Candy all over the world!</p>
  <%= form_tag(search_path, method: "get", class: "search_bar") do %>

    <%= text_field_tag :search_sweet_name_and_country, nil, placeholder: "Search by sweet name and country" %>
    <i id='search_icon' class="fa fa-search searchIcon"></i>
    <%= submit_tag "", id:'search_button'%>
  <% end %>
</div>

<div class="main-container background">
  <div class="requests-container">
    <%= render 'request_index' %>
  </div>

  <div class="container-map">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

