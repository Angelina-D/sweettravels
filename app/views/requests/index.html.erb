<div class="container-top sticky-search-reguest">
  <div class="left-lighting">
  <%= image_tag 'https://static.wixstatic.com/media/d57200_7b185c116c4a49138fdeeaf8e1b7d28f~mv2.gif', id: "left-lighting" %>
</div>

<div class="inner-sticky">
  <h1>Become a hero, fix a sweet junkie!</h1>


  <div class="align-search-bar">

    <%= form_tag(search_path, method: "get", class: "search_bar") do %>

      <%= text_field_tag :search_user_city, nil, placeholder: "Where are you?" %>
      <%= text_field_tag :search_sweet_name_and_country, nil, placeholder: "Where you wanna go?" %>
      <i id='search_icon' class="fa fa-search searchIcon"></i>
      <%= submit_tag "", id:'search_button'%>
    <% end %>

  </div>
</div>
  <div class="right-lighting">
  <%= image_tag 'https://static.wixstatic.com/media/d57200_7b185c116c4a49138fdeeaf8e1b7d28f~mv2.gif', id: "right-lighting" %>
</div>
</div>

<div class="main-container background">
  <div class="requests-container">
    <%= render 'request_index' %>
  </div>

  <div class="container-map">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

